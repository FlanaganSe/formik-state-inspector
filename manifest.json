{
  "manifest_version": 3,
  "name": "Formik State Inspector",
  "version": "1.3.0",
  "description": "Inspect Formik form state in React applications with real-time updates, JSON tree view, and instant search.",
  "author": "Sean Flanagan",
  "homepage_url": "https://github.com/FlanaganSe/formik-state-inspector",
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Formik State Inspector",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/inject.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
}
